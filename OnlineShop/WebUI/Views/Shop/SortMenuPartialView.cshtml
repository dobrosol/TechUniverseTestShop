@model WebUI.Models.PageModels.ProductViews.SortMenuViewModel
@using WebUI.Models;

@*НАЗВАНИЕ КАТЕГОРИИ*@
<div class="row">
    <div class="col-md-9">
        <h4>@Model.CategoryName</h4>
    </div>
    <div class="col-md-2">
        @*ТИП УПОРЯДОЧИВАНИЯ ТОВАРОВ*@
        <div class="sort">
            <span class="weight">Сортировать по</span>
            <label class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <span class="glyphicon glyphicon-menu-down" aria-hidden="true"></span>
            </label>
            <div class="dropdown-menu">
                <ul>
                    @foreach (var item in SortTypes.Types)
                    {
                        <li>
                            @Ajax.ActionLink(item.Value, "GetList", Model.Category, new { sortType = item.Key, page = Model.Page }, new AjaxOptions() { UpdateTargetId = Model.UpdateTargetId })
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
