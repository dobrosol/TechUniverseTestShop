@model WebUI.Models.PageModels.RegisterModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <link rel="stylesheet" type="text/css" href="~/Content/Login-RegisterStyle.css" />

    <title>TechUniverse - Регистрация</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.EditorFor(m => m.Login, new { htmlAttributes = new { @placeholder = "Логин", @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Login, null, new { @class = "validation-message" })
        </div>

        <div class="form-group">
            @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @placeholder = "Электронная почта", @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Email, null, new { @class = "validation-message" })
        </div>

        <div class="form-group">
            @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @placeholder = "Пароль", @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Password, null, new { @class = "validation-message" })
        </div>

        <div class="form-group">
            @Html.EditorFor(m => m.PasswordConfirm, new { htmlAttributes = new { @placeholder = "Подтверждение пароля", @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.PasswordConfirm, null, new { @class = "validation-message" })
        </div>
        <div>
            <input class="btn" type="submit" value="Регистрация" />
        </div>
    }
    @Html.ActionLink("В магазин", "Index", "Shop")
</body>
</html>
